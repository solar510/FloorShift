<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/list_song"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <com.floor.shift.customview.PolygonImageView
            android:id="@+id/img_artist"
            android:layout_centerInParent="true"
            app:poly_border="true"
            android:layout_width="match_parent"
            app:poly_border_color="@color/profile_border"
            app:poly_border_width="5dp"
            app:poly_corner_radius="5"
            app:poly_rotation_angle="0"
            app:poly_shadow="true"
            app:poly_vertices="0"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:gravity="center|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_artistname"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Richard Skinner"
            android:textSize="23sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Ricahrd"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>